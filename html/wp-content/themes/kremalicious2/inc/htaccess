# BEGIN CUSTOM WP STUFF

# Block access to WordPress files that reveal version information.
<FilesMatch "^(wp-config\.php|readme\.html|license\.txt)">
  Order allow,deny
  Deny from all
  Satisfy All
</FilesMatch>

# Remove date from post permalinks
RedirectMatch 301 ^/([0-9]+)/([0-9]+)/(.*)$ /$3

